<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/white"
    android:elevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="8dp">

      <TextView
        android:id="@+id/carYearTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/CarCardTitles"
        android:text="Год выпуска:"/>

      <TextView
        android:id="@+id/carModelTitle"
        app:layout_constraintTop_toBottomOf="@id/carYearTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/CarCardTitles"
        android:text="Модель автомобиля:"/>

      <TextView
        android:id="@+id/carManufacturerTitle"
        app:layout_constraintTop_toBottomOf="@id/carModelTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/CarCardTitles"
        android:text="Производитель:"/>

      <TextView
        android:id="@+id/carClassTitle"
        app:layout_constraintTop_toBottomOf="@id/carManufacturerTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/CarCardTitles"
        android:text="Класс автомобиля:"/>

      <TextView
        android:id="@+id/carBodyTypeTitle"
        app:layout_constraintTop_toBottomOf="@id/carClassTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/CarCardTitles"
        android:text="Тип кузова:"/>

      <TextView
        android:id="@+id/carYear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/CarCardTitles"
        android:text="1990"/>

      <TextView
        android:id="@+id/carModel"
        app:layout_constraintTop_toBottomOf="@id/carYear"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/CarCardTitles"
        android:text="RAV4"/>

      <TextView
        android:id="@+id/carManufacturer"
        app:layout_constraintTop_toBottomOf="@id/carModel"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/CarCardTitles"
        android:text="Toyota"/>

      <TextView
        android:id="@+id/carClass"
        app:layout_constraintTop_toBottomOf="@id/carManufacturer"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/CarCardTitles"
        android:text="C"/>

      <TextView
        android:id="@+id/carBodyType"
        app:layout_constraintTop_toBottomOf="@id/carClass"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/CarCardTitles"
        android:text="Crossover"/>

      <com.google.android.material.button.MaterialButton
        android:id="@+id/carDelete"
        android:text="delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/carBodyType"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.MaterialComponents.Button.TextButton"
      />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/carEdit"
        android:text="edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/carBodyType"
        app:layout_constraintRight_toLeftOf="@id/carDelete"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.MaterialComponents.Button.TextButton"
      />


    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>